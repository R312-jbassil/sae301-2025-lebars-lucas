---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
	<div class="h-screen grid lg:grid-cols-2 overflow-hidden">
		
		<!-- LEFT: Decorative animated circles -->
		<div class="hidden lg:flex items-center justify-center bg-gray-50 p-12 relative overflow-hidden">
			<div class="relative z-10 max-w-md w-full">
				<!-- Animated concentric circles -->
				<div class="relative w-96 h-96 mx-auto mb-8">
					<div class="absolute inset-0 flex items-center justify-center animate-pulse-slow">
						<div class="w-64 h-64 rounded-full border-4 border-blue-200 opacity-60"></div>
					</div>
					<div class="absolute inset-0 flex items-center justify-center animate-pulse-slower" style="animation-delay: 0.5s;">
						<div class="w-48 h-48 rounded-full border-4 border-blue-300 opacity-70"></div>
					</div>
					<div class="absolute inset-0 flex items-center justify-center animate-pulse-slowest" style="animation-delay: 1s;">
						<div class="w-32 h-32 rounded-full border-4 border-blue-400 opacity-80 flex items-center justify-center bg-blue-50">
							<div class="w-16 h-16 rounded-full bg-blue-400"></div>
						</div>
					</div>
					<!-- Floating dots -->
					<div class="absolute top-16 right-24 w-3 h-3 rounded-full bg-blue-300 animate-float"></div>
					<div class="absolute top-48 left-12 w-2 h-2 rounded-full bg-blue-400 animate-float-delayed"></div>
					<div class="absolute bottom-32 right-16 w-2.5 h-2.5 rounded-full bg-blue-200 animate-float-slow"></div>
				</div>

				<!-- Testimonial -->
				<div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
					<p class="text-sm text-gray-900 mb-3">
						"En quelques minutes, j'ai créé des configurations qui auraient pris des heures autrement. Révolutionnaire."
					</p>
					<div>
						<p class="font-semibold text-gray-900 text-sm">Thomas Laurent</p>
						<p class="text-xs text-gray-500">Designer Produit</p>
					</div>
				</div>
			</div>

			<!-- Background decoration -->
			<div class="absolute top-10 left-10 w-72 h-72 bg-blue-100 rounded-full opacity-20 blur-3xl"></div>
			<div class="absolute bottom-10 right-10 w-96 h-96 bg-blue-200 rounded-full opacity-10 blur-3xl"></div>
		</div>

		<!-- RIGHT: Form -->
		<div class="flex items-center justify-center p-6 lg:p-8 overflow-y-auto max-h-screen">
			<div class="w-full max-w-md">
				<a href="/" class="inline-block mb-6">
					<h1 class="text-xl font-semibold">TaVue</h1>
				</a>

				<div class="mb-6">
					<p class="text-xs uppercase tracking-wider text-gray-400 mb-1">NOUVEAU COMPTE</p>
					<h2 class="text-3xl font-semibold text-gray-900 mb-1">Inscription</h2>
					<p class="text-sm text-gray-600">Créez votre compte et commencez à personnaliser</p>
				</div>

				<form id="signup-form" class="space-y-4">
					<!-- First & Last Name -->
					<div class="grid grid-cols-2 gap-3">
						<div>
							<label for="prenom" class="block text-sm font-medium text-gray-900 mb-1.5">
								Prénom
							</label>
							<input
								type="text"
								id="prenom"
								name="prenom"
								required
								placeholder="Jean"
								class="w-full px-3 py-2.5 rounded-lg border border-gray-200 bg-gray-50 text-sm text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
							/>
						</div>
						<div>
							<label for="nom" class="block text-sm font-medium text-gray-900 mb-1.5">
								Nom
							</label>
							<input
								type="text"
								id="nom"
								name="nom"
								required
								placeholder="Dupont"
								class="w-full px-3 py-2.5 rounded-lg border border-gray-200 bg-gray-50 text-sm text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
							/>
						</div>
					</div>

					<!-- Email -->
					<div>
						<label for="email" class="block text-sm font-medium text-gray-900 mb-1.5">
							Adresse e-mail
						</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							placeholder="votre@email.com"
							class="w-full px-3 py-2.5 rounded-lg border border-gray-200 bg-gray-50 text-sm text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
						/>
					</div>

					<!-- Password -->
					<div>
						<label for="password" class="block text-sm font-medium text-gray-900 mb-1.5">
							Mot de passe
						</label>
						<input
							type="password"
							id="password"
							name="password"
							required
							placeholder="••••••••"
							minlength="8"
							class="w-full px-3 py-2.5 rounded-lg border border-gray-200 bg-gray-50 text-sm text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
						/>
						<p class="mt-1 text-xs text-gray-500">Minimum 8 caractères</p>
					</div>

					<!-- Password Confirm -->
					<div>
						<label for="password-confirm" class="block text-sm font-medium text-gray-900 mb-1.5">
							Confirmer le mot de passe
						</label>
						<input
							type="password"
							id="password-confirm"
							name="password-confirm"
							required
							placeholder="••••••••"
							minlength="8"
							class="w-full px-3 py-2.5 rounded-lg border border-gray-200 bg-gray-50 text-sm text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all"
						/>
					</div>

					<!-- Submit -->
					<button
						type="submit"
						class="w-full bg-blue-600 text-white py-2.5 px-6 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 transition-all flex items-center justify-center gap-2"
					>
						Créer mon compte
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
						</svg>
					</button>
				</form>

				<!-- Divider -->
				<div class="relative my-6">
					<div class="absolute inset-0 flex items-center">
						<div class="w-full border-t border-gray-200"></div>
					</div>
					<div class="relative flex justify-center text-sm">
						<span class="px-4 bg-white text-gray-500">OU</span>
					</div>
				</div>

				<!-- Social Signup -->
				<div>
					<!-- Google OAuth -->
					<button
						type="button"
						id="googlelogin"
						class="w-full flex items-center justify-center gap-2.5 px-4 py-2.5 rounded-lg border border-gray-200 bg-white text-sm text-gray-900 font-medium hover:bg-gray-50 transition-all"
					>
						<svg class="w-4 h-4" viewBox="0 0 24 24">
							<path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
							<path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
							<path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
							<path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
						</svg>
						S'inscrire avec Google
					</button>
				</div>

				<!-- Message d'erreur -->
				<p id="msg" class="text-sm text-red-600 text-center"></p>

				<!-- Login link -->
				<p class="mt-6 text-center text-sm text-gray-600">
					Déjà un compte ? 
					<a href="/login" class="font-medium text-blue-600 hover:text-blue-700 transition-colors">
						Se connecter
					</a>
				</p>
			</div>
		</div>

	</div>
</AuthLayout>

<style>
	@keyframes pulse-slow {
		0%, 100% { transform: scale(1); opacity: 0.6; }
		50% { transform: scale(1.05); opacity: 0.8; }
	}
	@keyframes pulse-slower {
		0%, 100% { transform: scale(1); opacity: 0.7; }
		50% { transform: scale(1.08); opacity: 0.9; }
	}
	@keyframes pulse-slowest {
		0%, 100% { transform: scale(1); opacity: 0.8; }
		50% { transform: scale(1.1); opacity: 1; }
	}
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-20px); }
	}
	@keyframes float-delayed {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-15px); }
	}
	@keyframes float-slow {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}
	.animate-pulse-slow {
		animation: pulse-slow 3s ease-in-out infinite;
	}
	.animate-pulse-slower {
		animation: pulse-slower 4s ease-in-out infinite;
	}
	.animate-pulse-slowest {
		animation: pulse-slowest 5s ease-in-out infinite;
	}
	.animate-float {
		animation: float 4s ease-in-out infinite;
	}
	.animate-float-delayed {
		animation: float-delayed 5s ease-in-out infinite;
	}
	.animate-float-slow {
		animation: float-slow 6s ease-in-out infinite;
	}
</style>

<script type="module">
	const { pb } = await import('/src/lib/pb.js');

	const form = document.getElementById('signup-form');
	form.onsubmit = async (e) => {
		e.preventDefault();
		
		const prenom = form.prenom.value;
		const nom = form.nom.value;
		const email = form.email.value;
		const password = form.password.value;
		const passwordConfirm = form['password-confirm'].value;
		
		// Validation
		if (password !== passwordConfirm) {
			document.getElementById("msg").textContent = 'Les mots de passe ne correspondent pas';
			return;
		}
		
		try {
			const userData = {
				email: email,
				emailVisibility: true,
				password: password,
				passwordConfirm: passwordConfirm,
				name: `${prenom} ${nom}`
			};
			
			console.log('Tentative de création avec:', userData);
			const record = await pb.collection('users').create(userData);
			console.log('Utilisateur créé:', record);
			
			// Afficher message de succès
			alert('✅ Compte créé avec succès ! Veuillez vous connecter.');
			
			// Rediriger vers la page de connexion
			location.href = '/login';
		} catch (err) {
			// Afficher l'erreur détaillée
			console.error('Erreur complète:', err);
			if (err.response?.data) {
				console.error('Détails:', err.response.data);
				const errors = err.response.data;
				let errorMsg = "Échec de l'inscription: ";
				if (errors.email) errorMsg += "Email invalide. ";
				if (errors.password) errorMsg += "Mot de passe trop court. ";
				document.getElementById("msg").textContent = errorMsg;
			} else {
				document.getElementById("msg").textContent = "Échec de l'inscription";
			}
		}
	};


	const googlelogin = document.getElementById("googlelogin");
	googlelogin.onclick = async () => {
		try {
			// Créer l'URL de redirection complète
			const redirectUrl = `${window.location.origin}/configurateur`;
			
			const authData = await pb.collection("users").authWithOAuth2({
				provider: 'google',
				urlCallback: (url) => {
					// Ouvre une popup pour l'authentification OAuth
					const width = 500;
					const height = 600;
					const left = window.screenX + (window.outerWidth - width) / 2;
					const top = window.screenY + (window.outerHeight - height) / 2;
					window.open(
						url,
						'OAuth',
						`width=${width},height=${height},left=${left},top=${top}`
					);
				}
			});
			
			// Redirection après succès
			if (authData) {
				location.href = "/configurateur";
			}
		} catch (err) {
			document.getElementById("msg").textContent = "Échec de l'inscription avec Google";
			console.error(err);
		}
	};
</script>
